@using BlankUmbraco.ViewModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<NewsViewModel>

@{
    var items = Model.NewsItems;
}

<div class="slideshow-container">
    @{
        foreach (var item in items)
        {
            int index = items.IndexOf(item);
            var name = item.Name;
            var summary = item.Summary;
            var imageUrl = item.ImageUrl;

            <div class="mySlides fade">
              <div class="numbertext">@index / @items.Count()</div>
              <img src="@imageUrl" style="width:100%">
              <div class="text">@name</div>
            </div>
        }
    }
    <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
    <a class="next" onclick="plusSlides(1)">&#10095;</a>
</div>
<br>
<div style="text-align:center">
    @{
        foreach (var item in items)
        {
            int index = items.IndexOf(item);
            <span class="dot" onclick="currentSlide(@index)"></span>
        }
    }
</div>
